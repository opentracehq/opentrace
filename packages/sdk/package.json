{
  "name": "@opentrace/sdk",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "check-types": "tsc -b"
  },
  "dependencies": {
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsup": "^8.3.6",
    "typescript": "^5.8.2"
  }
}
